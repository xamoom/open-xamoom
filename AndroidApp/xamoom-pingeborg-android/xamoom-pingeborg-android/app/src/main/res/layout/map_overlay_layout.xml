<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_view_close_phrase"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tapToCloseTapView" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/map_instruction_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/geofenceInstructionTextView"
        android:layout_above="@+id/tapToCloseTapView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="135dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/arrow_bended"
        android:layout_alignTop="@+id/geofenceInstructionTextView"
        android:layout_alignEnd="@+id/geofenceInstructionTextView"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>